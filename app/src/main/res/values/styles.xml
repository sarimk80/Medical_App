        <item name="cardBackgroundColor">@color/cardColor</item>
        <item name="android:layout_width">@dimen/_130sdp</item>
        <item name="android:layout_height">@dimen/_130sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="cardElevation">@dimen/_5sdp</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
